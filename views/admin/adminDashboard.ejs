<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Admin Dashboard</title>
    <style>
      .dashboard-icon {
        display: block;
        font-size: 40px;
        padding: 20px 0;
        color: #a82b47;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/navbar', { loginUser: loginUser }) %>

    <section>
      <div class="container-fluid">
        <div class="">
          <div class="row">
            <div class="col-md-3">
              <!-- sidebar -->
              <%- include('../partials/sidebar') %>
            </div>
            <div class="col-md-9">
              <div class="adminPanel card">
                <div class="text-center my-1">
                  <h4><span class="primary-color">FOODIES</span> Dashboard</h4>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="card mt-1">
                      <div class="text-center">
                        <span class="dashboard-icon"><i class="fas fa-users"></i></span>
                        <h3 class="my-2 primary-color">Users</h3>
                        <h2 class="primary-color mb-0 pb-2"><%= String(users).padStart(2, '0') %></h2>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="card mt-1">
                      <div class="text-center">
                        <span class="dashboard-icon"><i class="fas fa-utensils"></i></span>
                        <h3 class="my-2 primary-color">Restaurants</h3>
                        <h2 class="primary-color mb-0 pb-2"><%= String(restaurants).padStart(2, '0') %></h2>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="card mt-1">
                      <div class="text-center">
                        <span class="dashboard-icon"><i class="fas fa-receipt"></i></span>
                        <h3 class="my-2 primary-color">Orders</h3>
                        <h2 class="primary-color mb-0 pb-2"><%= String(orders).padStart(2, '0') %></h2>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="card mt-1">
                      <div class="text-center">
                        <span class="dashboard-icon"><i class="fas fa-envelope"></i></span>
                        <h3 class="my-2 primary-color">Contact Inquiries</h3>
                        <h2 class="primary-color mb-0 pb-2"><%= String(contacts).padStart(2, '0') %></h2>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
