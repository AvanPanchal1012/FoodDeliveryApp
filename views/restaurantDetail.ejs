<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= restaurant.name %></title>
  </head>
  <body>
    <%- include('partials/navbar', { loginUser: loginUser }) %>

    <section class="container-fluid">
      <div class="container">
        <div class="row my-5">
          <div class="col-12">
            <div class="card">
              <img
                style="height: 400px; object-fit: cover"
                src="/static/image/img/<%= restaurant.photo %>"
                class="img-fluid"
                alt="<%= restaurant.name %>"
              />
              <div class="card-body">
                <h1 class="card-title"><%= restaurant.name %></h1>
                <p class="card-text">Location: <%= restaurant.location %></p>
                <p class="card-text">Cuisine: <%= restaurant.cuisine %></p>
                <p class="card-text">Rating: <%= restaurant.rating %></p>
                <p class="card-text"><%= restaurant.description %></p>
              </div>
            </div>
            <a href="/restaurants/1" class="btn main-btn mt-3"
              >Back to Restaurants</a
            >
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row my-2">
          <% dishes.forEach(function(dish) { %>
          <div class="col-md-4 my-5">
            <div class="card">
              <img
                style="height: 210px"
                src="/static/image/img/<%= dish.photo %>"
                class="img-fluid mb-2"
                alt="<%= dish.dname %>"
              />
              <h4><%= dish.dname %></h4>
              <p class="text-color">
                Time: <%= dish.dtime %> Minutes | Serve: <%= dish.dserve %>
              </p>
              <h2 class="primary-color mb-3">
                <i class="fa fa-usd"></i>
                <% const discountedPrice = dish.dprice - (dish.dprice *
                dish.ddiscount / 100); %> <%= discountedPrice.toFixed(2) %>
                <del class="text-muted">
                  <i class="fa fa-usd"></i><%= dish.dprice %>
                </del>
              </h2>
              <button
                onclick="addFoodToBasket('<%= restaurant._id %>','<%= dish._id %>', '<%= dish.dname %>', '<%= dish.dprice %>', '<%= dish.photo %>' )"
                class="main-btn"
              >
                Add To Basket
              </button>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </section>
  </body>
</html>
